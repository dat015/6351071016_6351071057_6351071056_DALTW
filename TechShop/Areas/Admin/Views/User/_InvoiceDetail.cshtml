@model TechShop.Areas.Admin.Models.InvoiceDetailViewModel

<h4>Chi tiết hóa đơn</h4>
<p>Mã hóa đơn: @Model.Invoice.OrderId</p>
<p>Ngày tạo: @Model.Invoice.OrderDate</p>
<p>Tổng tiền: @Model.Invoice.TotalAmount.ToString("N0")</p>

<h4>Danh sách sản phẩm</h4>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Mã sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.InvoiceDetails)
        {
            <tr>
                <td>@detail.Specs.Product.ProductId</td>
                <td>@detail.Specs.Product.ProductName</td>
                <td>@detail.Quantity</td>
                <td>@detail.UnitPrice.ToString("N0")</td>
            </tr>
        }
    </tbody>
</table>