@model TechShop.Areas.Admin.Models.UserDetailViewModel

<h4>Thông tin người dùng</h4>
<p>Họ và tên: @Model.User.Name</p>
<p>Email: @Model.User.Email</p>
<p>Số điện thoại: @Model.User.PhoneNumber</p>

<h4>Danh sách hóa đơn</h4>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Mã hóa đơn</th>
            <th>Ngày tạo</th>
            <th>Tổng tiền</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model.Invoices)
        {
            <tr>
                <td>@invoice.OrderId</td>
                <td>@invoice.OrderDate</td>
                <td>@invoice.TotalAmount.ToString("N0")</td>
                <td>
                    <button onclick="DetailInvoice(@invoice.OrderId)" class="btn btn-info btn-sm">
                        Chi tiết hóa đơn
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>